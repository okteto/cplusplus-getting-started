    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/hello-world",
            "useExtendedRemote": true,
            "miDebuggerServerAddress": "localhost:2345",
            "miDebuggerPath": "/usr/bin/gdb",
            "targetArchitecture": "x86_64",
            "linux": {
            "MIMode": "gdb"
            },
            "osx": {
            "MIMode": "gdb"
            },
            "windows": {
            "MIMode": "gdb"
            },
            
        }
    ]
}